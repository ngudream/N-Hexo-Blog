heading_style = hexo-config("heading_style")
all_heading = "h1, h2, h3, h4, h5, h6"

if !heading_style
    h1
        margin-top 0.5em
		font-family "Microsoft YaHei",Arial,Helvetica,sans-serif,"宋体"
    h2
        margin-top 0.5em
        padding 2.0em .5em
		font-family "Microsoft YaHei",Arial,Helvetica,sans-serif,"宋体"
        &:hover
            color #88acdb
    h3
        margin .5em auto
        padding .2em .0em
    h4, h5, h6
        margin-top 0.5em auto

if heading_style == 1
    {all_heading}
        margin-top 20px
        color #574C4C
        padding-bottom 5px
        border-bottom 1px solid #ddd
    h1
        margin-top 30px
		
if heading_style == 2
    {all_heading}
        margin-top 1em
        margin-bottom 16px
        font-weight bold
        line-height 1.4
        color #333
        font-family "Helvetica Neue", Helvetica, "Segoe UI", Arial, freesans, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
    h1, h2
        padding-bottom .3em
        border-bottom 1px solid #eee

    heading = 2.25 1.2, 1.75 1.225, 1.5 1.43, 1.25 1.1
    for x, i in heading
        h{i+1}
            font-size x[0]rem
            line-height x[1]

    h1
        margin .67em 0
    h5, h6
        font-size 1rem
    h6
        color #777