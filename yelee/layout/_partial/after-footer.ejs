      }
      elem = document.createElement('link'),
      elem.rel = 'stylesheet';
      if ( typeof callback === 'function' )  {
          bl = true;
      }

      // for ie
      function handle() {
          if ( elem.readyState === 'loaded' || elem.readyState === 'complete' ) {
              if (bl && !isExecuted) {
                  callback();
                  isExecuted = true;
              }
              elem.onreadystatechange = null;
          }
      }
      elem.onreadystatechange = handle;

      // for 非ie
      if (bl && !isExecuted) {
          elem.onload = callback;
          isExecuted = true;
      }

      elem.href = cssUrl;
